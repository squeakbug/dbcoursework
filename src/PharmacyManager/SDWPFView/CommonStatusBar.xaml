<UserControl
    x:Class="SDWPFView.CommonStatusBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SDWPFView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StatusBar
            Name="MainStatusBar"
            Grid.Row="1"
            MinHeight="30"
            Margin="0,0,0,0"
            VerticalAlignment="Top"
            Background="LightBlue">
            <StatusBarItem Margin="10,0,0,0" HorizontalAlignment="Left">
                <Label
                    x:Name="CurrentControlNameLabel"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left" />
            </StatusBarItem>
            <StatusBarItem Margin="20,0,0,0" HorizontalAlignment="Left">
                <Label
                    x:Name="LastOperationStatusLabel"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Left" />
            </StatusBarItem>
            <StatusBarItem Margin="0,0,17,0" HorizontalAlignment="Right">
                <Label x:Name="CurrentEmployeeNameLabel" HorizontalAlignment="Right" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
